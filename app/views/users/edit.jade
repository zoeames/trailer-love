extends ../shared/template

block content
  h2 Edit Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/profile')
        input(type='hidden', name='_method', value='put')
        .radio
          label
            input(type='radio' name='public' value='public' checked=user.isPublic)
            span Public
        .radio
          label
            input(type='radio' name='public' value='private', checked=!user.isPublic)
            span Private
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', value=user.email, autofocus=true)
        .form-group
          label(for='phone') Phone
          input.form-control#phone(type='tel', name='phone', value=user.phone)
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo', value=user.photo)
        .form-group
          label(for='tagline') Tagline
          input.form-control#tagline(type='text', name='tagline', value=user.tagline)
        .form-group
          label(for='about') About Me
          input.form-control#about(type='textarea', name='about', value=user.about)
        .form-group
          label(for='location') Location
          input.form-control#loc(type='text', name='loc', value=user.location)
          input.form-control#lat(type='hidden', name='lat')
          input.form-control#lng(type='hidden', name='lng')
          button.btn.btn-success(type='submit') Edit Profile
    .col-xs-6

block scripts
